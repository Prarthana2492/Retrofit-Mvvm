<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.FarmPe.Farmer">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permisssion.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>



    <application
        android:name=".Activity.MyApplication"

        android:allowBackup="true"
        android:icon="@drawable/nandi_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nandi_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.FarmPe.Farmer.Activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.FarmPe.Farmer.Activity.ForgotPasswordNew"
            android:screenOrientation="portrait"/>

        <activity android:name="com.FarmPe.Farmer.Activity.SelectLanguageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.FarmPe.Farmer.Activity.EnterOTP"
            android:screenOrientation="portrait"/>
        <activity android:name="com.FarmPe.Farmer.Activity.Thank_U_New"
            android:screenOrientation="portrait"/>

        <activity android:name="com.FarmPe.Farmer.Activity.LandingPageActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="false"
            />

        <activity android:name="com.FarmPe.Farmer.Activity.ResetPasswordNew"
            android:screenOrientation="portrait"/>
        <activity android:name="com.FarmPe.Farmer.Activity.FarmerUser"
            android:screenOrientation="portrait"/>

        <activity android:name="com.FarmPe.Farmer.Activity.FarmerActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.FarmPe.Farmer.Activity.SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.FarmPe.Farmer.Activity.FarmerActivityNext"
            android:screenOrientation="portrait"/>


        <receiver
            android:name=".Activity.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>



        <!-- Firebase Notifications -->
        <service android:name="com.FarmPe.Farmer.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />

            </intent-filter>
        </service>
        <service android:name="com.FarmPe.Farmer.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- ./Firebase Notifications -->


    </application>


</manifest>