<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/back_feed"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                >


                <ImageView
                    android:id="@+id/b_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/go_back_left_arrow"
                    style="@style/SelectableItemBackground"
                    android:background="?attr/selectableItemBackgroundBorderless"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/toolbar_title" />
        </LinearLayout>
        <TextView
            android:id="@+id/first_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application and Acceptance of the terms"
            android:textSize="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            />
        <TextView
            android:id="@+id/second_textt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated May 25, 2019"
            android:textSize="14dp"

            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="23dp"
            />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Provisions"
            android:textSize="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:id="@+id/second_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated May 25, 2019"
            android:textSize="14dp"
            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="23dp"
            />

        <TextView
            android:id="@+id/txtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Provisions"
            android:textSize="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:id="@+id/second_tex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated May 25, 2019"
            android:textSize="14dp"
            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="23dp"
            />
        <TextView
            android:id="@+id/tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Provisions"
            android:textSize="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:id="@+id/second_te"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated May 25, 2019"
            android:textSize="14dp"
            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="23dp"
            />

