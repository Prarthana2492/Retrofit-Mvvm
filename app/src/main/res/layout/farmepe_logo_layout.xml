        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="20"
                android:background="@color/light_grey1"
                android:layout_weight="20">

                <ImageView

                    android:layout_width="55dp"
                    android:layout_height="100dp"
                    android:layout_weight="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/android_logo_red"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Welcome,"/>


                    <TextView
                        android:id="@+id/nameee"
                        android:layout_marginTop="2dp"

                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Jagdish Kumar"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/something"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30">



                <include
                    layout="@layout/banner_image_slider_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp" >
                </include>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/no_requests"
                android:visibility="gone"

                android:layout_height="0dp"
                android:layout_weight="40">

                <include
                    layout="@layout/no_request_layout"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

<!--
            <include
                layout="@layout/banner_image_slider_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="30dp"
                android:layout_marginBottom="10dp" >
            </include>-->



