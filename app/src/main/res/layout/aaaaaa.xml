<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="vertical"
        android:weightSum="100">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="10"
            android:background="@color/menu_green"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:gravity="left"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="10dp"
            app:titleTextColor="@android:color/white">


            <LinearLayout
                android:id="@+id/back_feed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_filter_state"
                android:gravity="center">


                <ImageView
                    android:id="@+id/b_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_go_back_left_arrow_" />
            </LinearLayout>


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Details"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="35dp"
            android:layout_weight="25"
            android:orientation="vertical">


            <TextView
                android:id="@+id/purchase_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="When are you planning to purchase?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">



                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Immediate"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="1 Month"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="2 Months"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="3 Months"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="After 3 Months"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="20"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Are you looking for finance/loan ?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="20"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Are you looking for Insurance?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="20"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Need Demonstration/Test drive ?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="10"
        android:background="#F72C1D"
        android:gravity="center|bottom"
        >


        <TextView
            android:id="@+id/add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center|bottom"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Request a Price"
            android:layout_marginBottom="15dp"
            android:padding="11dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>

