<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_effect"
            >


            <ImageView
                android:id="@+id/b_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close_black"
                style="@style/SelectableItemBackground"
                android:background="?attr/selectableItemBackgroundBorderless"

                />

        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:background="#ffff"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where is your farm located ?"
                android:textSize="18dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adding your farm location helps us recommend the right opportunities around you."
                android:textSize="14dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />




            <EditText
                android:id="@+id/farm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Farm Name"
                android:textSize="12dp"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/cont_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Person Name"
                android:textSize="12dp"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:textSize="12dp"
                android:maxLength="10"
                android:inputType="number"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                />


            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link your social accounts"
                android:textSize="18dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adding your farm location helps us recommend the right opportunities around you."
                android:textSize="14dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="100"
                >

                <LinearLayout
                    android:id="@+id/whatsapp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/whatsapp_icon"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:text="Whatsapp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_facebook"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:text="Facebook"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/insta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/insta"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:text="Instagram"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tiktok"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:text="Twitter"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:layout_gravity="right"
                android:textColor="#000"
                android:textSize="14dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                />-->

            <TextView
                android:id="@+id/continue_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textColor="#fff"
                android:background="@drawable/border_filled_red"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
