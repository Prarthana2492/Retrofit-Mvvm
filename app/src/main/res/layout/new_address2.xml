<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipToPadding="true"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@android:color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                       >

                        <android.support.v7.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:minHeight="?attr/actionBarSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:titleTextColor="@android:color/white"
                            android:background="#000"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:contentInsetLeft="0dp"
                            android:contentInsetStart="0dp"
                            app:contentInsetLeft="0dp"
                            app:contentInsetStart="10dp"
                            android:contentInsetRight="0dp"
                            android:contentInsetEnd="0dp"
                            app:contentInsetRight="0dp"
                            app:contentInsetEnd="0dp">


                            <LinearLayout
                                android:id="@+id/back_feed"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:background="@drawable/ic_filter_state">

                                <ImageView
                                    android:id="@+id/b_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_go_back_left_arrow_"
                                    />
                            </LinearLayout>


                            <!--<LinearLayout-->
                                <!--android:id="@+id/back_feed"-->
                                <!--android:layout_width="35dp"-->
                                <!--android:layout_height="50dp"-->

                                <!--&gt;-->


                                <!--<ImageView-->
                                    <!--android:id="@+id/b_arrow"-->
                                    <!--android:layout_width="20dp"-->
                                    <!--android:layout_height="20dp"-->
                                    <!--android:layout_gravity="center_vertical"-->
                                    <!--android:src="@drawable/ic_left_arrow_white"-->
                                    <!--style="@style/SelectableItemBackground"-->
                                    <!--android:background="?attr/selectableItemBackgroundBorderless"-->


                                    <!--/>-->

                            <!--</LinearLayout>-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Your Address"
                                android:textSize="16dp"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:id="@+id/toolbar_title" />

                        </android.support.v7.widget.Toolbar>

                    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="95">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="100"
        >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/select_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:gravity="start"
                            android:editable="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:hint="Select an Address Type"
                            android:textColor="#000"
                            android:backgroundTint="#d3d3d3"
                            android:background="@android:color/transparent"
                            android:textSize="14dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical">



                            <EditText
                                android:id="@+id/full_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:hint="Full name*"
                                android:textSize="14dp"
                                android:gravity="center_vertical"
                                android:maxLength="30"
                                android:padding="5dp"
                                android:textColor="#000"
                                android:backgroundTint="#d3d3d3"
                                android:background="@android:color/transparent"
                                android:layout_marginLeft="5dp"

                                />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>


                            <EditText
                                android:id="@+id/mobile_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:hint="10-digit mobile number* "
                                android:textSize="14dp"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:maxLength="10"
                                android:selectAllOnFocus="true"
                                android:inputType="number"
                                android:textColor="#000"
                                android:backgroundTint="#d3d3d3"
                                android:background="@android:color/transparent"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"
                                />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>

                            <EditText
                                android:id="@+id/street"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:hint="Colony/Street/Locality*"
                                android:textSize="14dp"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:textColor="#000"
                                android:backgroundTint="#d3d3d3"
                                android:background="@android:color/transparent"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"
                                />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="30">



                        <EditText
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:hint="State*"
                            android:editable="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14dp"
                            android:gravity="start"
                            android:drawableRight="@drawable/ic_right_angle_arrow"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000"
                            android:backgroundTint="#dcdcdc"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="13dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>



                        <EditText
                            android:id="@+id/district_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:hint="District*"
                            android:editable="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14dp"
                            android:gravity="start"
                            android:drawableRight="@drawable/ic_right_angle_arrow"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000"
                            android:backgroundTint="#dcdcdc"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="13dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>


                        <EditText
                            android:id="@+id/taluk_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:hint="Tehsil"
                            android:editable="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14dp"
                            android:gravity="start"
                            android:layout_marginTop="13dp"
                            android:drawableRight="@drawable/ic_right_angle_arrow"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000"
                            android:backgroundTint="#dcdcdc"
                            android:background="@android:color/transparent"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>

                        <EditText
                            android:id="@+id/hobli_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:hint="Block/Area"
                            android:textSize="14dp"
                            android:editable="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="start"
                            android:layout_marginTop="13dp"
                            android:drawableRight="@drawable/ic_right_angle_arrow"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000"
                            android:backgroundTint="#dcdcdc"
                            android:background="@android:color/transparent"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>

                        <EditText
                            android:id="@+id/village"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:hint="Village"
                            android:textSize="14dp"
                            android:editable="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="start"
                            android:layout_marginTop="13dp"
                            android:drawableRight="@drawable/ic_right_angle_arrow"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000"
                            android:backgroundTint="#dcdcdc"
                            android:background="@android:color/transparent"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>

                        <EditText
                            android:id="@+id/pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:hint="Pincode*"
                            android:textSize="14dp"
                            android:gravity="start"
                            android:layout_marginTop="13dp"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:maxLength="6"
                            android:inputType="number"
                            android:textColor="#000"
                            android:backgroundTint="#dcdcdc"
                            android:background="@android:color/transparent"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginHorizontal="5dp"/>


                    </LinearLayout>

            </LinearLayout>
</ScrollView>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
   >
    <TextView
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="8"
        android:background="@drawable/border_filled_red"
        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:hint="Add Address"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginHorizontal="5dp"/>

</LinearLayout>

</LinearLayout>

