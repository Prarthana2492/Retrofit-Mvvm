<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center"
        android:layout_weight="20"
        >

     <!-- <ImageView
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:src="@drawable/xohri_logo_white_"
          />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:text="FarmPe"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    />

            </LinearLayout>


    <TextView
        android:id="@+id/change_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="English"
        android:drawableRight="@drawable/ic_down_arrow"
        android:gravity="right"
        android:drawablePadding="5dp"
        android:fontFamily="@font/segoeui"
        android:textSize="14dp"
        android:textColor="#fff"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="55"
        >


        <TextView
            android:id="@+id/welcome_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Login"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:textSize="18dp"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:textColor="#161823"
            />


        <EditText
            android:id="@+id/mob_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:hint="10 Digit Mobile Number "
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="@color/dot_dark_screen1"
            android:cursorVisible="true"
            android:background="@drawable/border_empty"
            android:textCursorDrawable="@drawable/cursor_color"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="#21232d"
            android:textSize="15dp"
            android:textStyle="normal"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:textColorHint="#8a8b91"
            app:theme="@style/MyStyle"
            app:hintEnabled="false"
            app:hintAnimationEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#8a8b91">

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:hint="Password"
            android:background="@drawable/border_empty"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="@color/dot_dark_screen1"
            android:padding="15dp"
            android:textStyle="normal"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#21232d"
            android:textSize="15dp"
             />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:weightSum="100"
            >

            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:buttonTint="#999999"
                android:layout_weight="50"
                android:fontFamily="@font/segoeui"
                android:text="Remember me"
                android:textColor="#8a8b91"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/forgot_pass_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:gravity="right|center"
                android:layout_weight="50"
                android:textColor="#064a8e"
                android:text="Forgot Password?"
                android:textSize="15dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_filled_pink"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:padding="15dp"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textSize="14dp" />

<!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:text="OR"
            android:textColor="#161823"
            android:textSize="14dp" />
-->


