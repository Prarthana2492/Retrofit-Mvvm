<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            >

    <TextView
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/segoeui"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="How it Works?"/>


            <TextView
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="1. Register"/>

            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:text="Register by entering the required details"/>

            <TextView
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="2. Order"/>

            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:text="Place an order in the app by selecting the required items"/>

            <TextView
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="3. Delivery"/>

            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:text="Get the required items at your shop delivered in the mentioned date"/>

            <TextView
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="4. Pay"/>

            <TextView
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorPrimary"
                android:text="Pay online post order placement"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>