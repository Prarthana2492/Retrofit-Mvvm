<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#f1f1f1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="8dp">


            <LinearLayout
                android:id="@+id/itemmm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_weight="100">


                    <ImageView
                        android:id="@+id/imageff"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <ImageView
                        android:id="@+id/fav_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_star" />

                </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom">


                        <TextView
                            android:id="@+id/brand_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:text="hhjkjkjkjk"
                            android:gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:layout_marginLeft="10dp"
                            android:text="ghhhh"
                            android:layout_marginTop="2dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="14dp" />



                        <!--<TextView-->
                            <!--android:id="@+id/hp_power"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:fontFamily="@font/segoeui"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:singleLine="true"-->
                            <!--android:layout_marginTop="2dp"-->
                            <!--android:text="ghghjg"-->
                            <!--android:textColor="#000"-->
                            <!--android:textStyle="bold"-->
                            <!--android:textSize="14dp" />-->

                    </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="100"
                    android:layout_marginTop="7dp">


                    <TextView
                        android:id="@+id/brochure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="   View Brochure"
                        android:gravity="left"
                        android:textColor="@color/navy_blue"
                        android:drawableLeft="@drawable/ic_pdf"
                        android:padding="10dp"
                        android:textSize="14dp" />



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/border_red2"
                        android:layout_weight="50"
                        >


                    <TextView
                        android:id="@+id/selectt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Select"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp"
                        android:textSize="14dp"
                        android:textAllCaps="true"
                        android:drawableLeft="@drawable/snowflakes"
                        />

                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>
</LinearLayout>
