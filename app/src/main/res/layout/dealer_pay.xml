<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:background="@color/menu_green"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/back_feed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_filter_state"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/b_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_go_back_left_arrow_"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/setting_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="Payment"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20dp" />

            </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="91"
        >





        <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="100"
                 android:orientation="vertical"
                 android:layout_marginTop="1dp"
                 android:layout_marginHorizontal="10dp"
                 android:background="#ffff">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="82"
                    android:orientation="vertical"
                >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:weightSum="100"

                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="25"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/avatarmale"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="75"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jagadeesh Kumar"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="14dp"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="9867532109"
                                android:textColor="#000"
                                android:textSize="14dp"

                                />
                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/loan_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:paddingRight="10dp"
                        >

                        <EditText
                            android:id="@+id/addbhim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Add BHIM UPI ID"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16dp"
                            android:textColorHint="#9D9D9D"
                            android:fontFamily="@font/segoeui"
                            android:paddingVertical="13dp"
                            android:background="@drawable/request_price_white_border"
                            />

                        <EditText
                            android:id="@+id/bn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:hint="Insurance Name"
                            android:paddingRight="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16dp"
                            android:textColorHint="#9D9D9D"
                            android:fontFamily="@font/segoeui"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:paddingVertical="13dp"
                            android:background="@drawable/request_price_white_border"
                            />
                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Amount"
                            android:textSize="16dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="10dp"
                            android:textColorHint="#9D9D9D"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:fontFamily="@font/segoeui"
                            android:paddingVertical="13dp"
                            android:background="@drawable/request_price_white_border"
                            />
                        <EditText
                            android:id="@+id/des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description"
                            android:textSize="16dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="10dp"
                            android:textColorHint="#9D9D9D"
                            android:paddingLeft="10dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:fontFamily="@font/segoeui"
                            android:paddingVertical="13dp"
                            android:background="@drawable/request_price_white_border"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/loan_lay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Debit From"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="#dcdcdc"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:weightSum="100"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:orientation="vertical"

                                >


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="#fff"
                                    >

                                    <ImageView
                                        android:id="@+id/bank_img"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/hdfc_bank_64"

                                        />



                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="70"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:id="@+id/bank_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HDFC"
                                    android:textColor="#000"
                                    android:textStyle="bold"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/bank_account_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3045xxxx938 - JK"
                                    android:textColor="#000"
                                    android:layout_marginTop="5dp"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="#fff"
                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_success"

                                        />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:weightSum="100"
                            android:layout_weight="10"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:orientation="vertical"

                                >


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="#fff"
                                    >

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icici_64"

                                        />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="70"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                >
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HDFC"
                                    android:textColor="#000"
                                    android:textStyle="bold"
                                    android:textSize="14dp" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3045xxxx938 - JK"
                                    android:textColor="#000"
                                    android:layout_marginTop="5dp"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="#fff"
                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_success"

                                        />

                                </LinearLayout>

                            </LinearLayout>




                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Another Bank Accout"
                            android:textSize="12dp"
                            android:textColor="#26A541"
                            android:textAllCaps="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginLeft="20dp"
                            />





                    </LinearLayout>




                </LinearLayout>






                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="#dcdcdc"/>



            </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/request_price_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="9"
        android:background="#FC2626"
        >
        <TextView
            android:id="@+id/requst_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="Pay"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
