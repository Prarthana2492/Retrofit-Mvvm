<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:background="#fff"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"

    android:tag="cards main container">


    <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"

           android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:orientation="vertical">-->

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="#fff"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >


            <ImageView
                android:id="@+id/prod_img"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/fruits_banner_img"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="100"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prod_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Tracter Price"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold" />

               <!-- <TextView
                    android:id="@+id/prod_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Mahindra Jivo mahi"
                    android:textColor="#000"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="10dp"
                    />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:layout_gravity="center"
                    android:text="Immediately"
                    android:textColor="#000"
                    android:textSize="14dp"
                    />
-->
                <TextView
                    android:id="@+id/farmer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"

                    android:text="Farmer Name"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Rampura, Bahjoi"
                    android:drawablePadding="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_location_sign"
                    android:textColor="#000"
                    android:textSize="10dp"
                    />

                <TextView
                    android:id="@+id/connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:layout_gravity="center"
                    android:text="Connect"
                    android:background="@drawable/border_empty"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="30dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>










    </LinearLayout>

</LinearLayout>




















