<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    android:weightSum="100"

    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="55"
       android:background="#ffffff"
       android:weightSum="100"
       android:orientation="vertical"
       >
      <LinearLayout
          android:id="@+id/update_acc_layout"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="70"
          android:layout_marginTop="5dp"
          android:orientation="vertical"
          android:gravity="center|bottom"
          android:background="#ffffff"
          >

         <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/prod_img1"
             android:layout_width="wrap_content"
             android:layout_height="100dp"
             android:paddingTop="5dp"
             android:src="@drawable/avatarmale"
             app:civ_border_color="#ffffff"
             app:civ_border_width="0.5dp" />


      </LinearLayout>


      <LinearLayout
          android:id="@+id/prof_tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="15"
          android:layout_marginBottom="25dp"
          android:gravity="center"
          android:background="#fff"
          >


         <TextView
             android:id="@+id/user_name_menu"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fontFamily="@font/segoeui"
             android:gravity="center"
             android:padding="5dp"
             android:text="fdssdfsfsd"
             android:textColor="#000"
             android:textSize="16dp"
             android:textStyle="bold"
             />


         <TextView
             android:id="@+id/phone_no"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="asasasa"
             android:fontFamily="@font/segoeui"
             android:textSize="14dp"
             android:gravity="center"
             android:textColor="#000"
             />


      </LinearLayout>





      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="100"
          android:layout_marginBottom="5dp"
          android:gravity="center_vertical"
          android:layout_weight="20"
          android:background="#fafafa"
          >

         <LinearLayout
             android:id="@+id/your_request"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_weight="50"

             >

            <TextView
                android:id="@+id/request_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/your_request1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Requests"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

         </LinearLayout>


         <LinearLayout
             android:id="@+id/nw_request"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_weight="50"
             android:gravity="center"

             >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_add_plus"
                />

            <TextView
                android:id="@+id/nw_request1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make a Request"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

         </LinearLayout>



      </LinearLayout>



   </LinearLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="45"
       android:background="@color/white"
       android:orientation="vertical"
       >



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          android:paddingLeft="30dp"
          >





         <TextView
             android:id="@+id/ur_rqst"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Your Requests"
             android:layout_marginTop="30dp"
             android:textSize="17dp"
             android:drawableLeft="@drawable/ic_close_envelop"
             android:drawablePadding="10dp"
             android:fontFamily="@font/segoeui"
             android:textColor="#000"
             />


         <TextView
             android:id="@+id/your_addrss"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Your Address"
             android:layout_marginTop="30dp"
             android:textSize="17dp"
             android:drawableLeft="@drawable/ic_place_holder"
             android:drawablePadding="10dp"
             android:fontFamily="@font/segoeui"
             android:textColor="#000"
             />



         <TextView
             android:id="@+id/settings"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Your Profile"
             android:layout_marginTop="30dp"
             android:textSize="17dp"
             android:drawableLeft="@drawable/ic_user_profile"
             android:drawablePadding="10dp"
             android:fontFamily="@font/segoeui"
             android:textColor="#000"
             />



      </LinearLayout>

   </ScrollView>


</LinearLayout>
