<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#fff"
            android:orientation="vertical"
            >


                    <LinearLayout
                        android:id="@+id/back_feed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ripple_effect"
                        >


                        <ImageView
                            android:id="@+id/b_arrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_close_black"
                            style="@style/SelectableItemBackground"
                            android:background="?attr/selectableItemBackgroundBorderless"

                            />

                    </LinearLayout>






        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:background="#ffff"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where is your farm located ?"
                android:textSize="18dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adding your farm location helps us recommend the right opportunities around you."
                android:textSize="14dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USE CURRENT LOCATION"
                android:textSize="12dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/border"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Colony / Street / Locality"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select State"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:editable="false"

                android:layout_marginTop="10dp"
                android:textColor="#000"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select District"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:editable="false"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Taluk"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:editable="false"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Block"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:editable="false"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Village"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:paddingRight="10dp"
                android:editable="false"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode"
                android:paddingVertical="10dp"
                android:inputType="number"
                android:textSize="12dp"
                android:paddingRight="50dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:orientation="vertical"
        >

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#e6e6e6"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:layout_gravity="right"
            android:textColor="#000"
            android:textSize="14dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            />
        <TextView
            android:id="@+id/continue_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:background="@drawable/border_filled_red"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            />
    </LinearLayout>

    </LinearLayout>


</LinearLayout>