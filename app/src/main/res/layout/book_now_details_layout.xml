        <LinearLayout
            android:id="@+id/purchase_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="23dp"
            android:layout_weight="27"
            android:orientation="vertical">


            <TextView
                android:id="@+id/purchase_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/segoeui"
                android:text="When are you planning to purchase?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:weightSum="3"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/immediate_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Immediate"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView
                    android:id="@+id/one_month_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="1 Month"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/two_month_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="2 Months"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/three_month_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="3 Months"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView
                    android:id="@+id/aftr_three_month_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="After 3 Months"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="20"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Are you looking for finance/loan ?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fin_yes"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView
                    android:id="@+id/fin_no"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />




            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="20"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Are you looking for Insurance?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/insuranc_yes"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView
                    android:id="@+id/insuranc_no"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="15"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Need Demonstration/Test drive ?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/demo_yes"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />


                <TextView
                    android:id="@+id/demo_no"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="12dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        />

    <LinearLayout
        android:id="@+id/request_price_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="9"
        android:background="#F72C1D"


        >


        <TextView
            android:id="@+id/requst_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/segoeui"
            android:textAllCaps="true"
            android:gravity="center_horizontal"
            android:text="Book Now"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>

