<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/green"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_go_back_left_arrow_"

                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location And Image"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/toolbar_title" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="40">


        <TextView
            android:id="@+id/license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textSize="16dp"
            android:textStyle="bold"
            android:text="Select Shop Location"
            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_grey">


            <ImageView
                android:id="@+id/select_location"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_map"
                />


            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Select Location"
                android:textColor="#000"
                android:fontFamily="@font/segoeui"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="44">


        <TextView
            android:id="@+id/licensuye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Capture Firm / Shop Photo"
            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_grey">



        <FrameLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/capture_image"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="80dp"
                    android:src="@drawable/fruit" />


             <ImageView
            android:id="@+id/image_athcc"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_gravity="bottom|right"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="60dp"
           android:src="@drawable/camera" />


       </FrameLayout>


            <TextView
                android:id="@+id/txhgt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Capture Photo"
                android:textColor="#000"
                android:fontFamily="@font/segoeui"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/continu_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/apply_loan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CONTINUE"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/border_filled_red_not_curved"
            android:textColor="#fff"
            />



    </LinearLayout>



</LinearLayout>