<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipToPadding="true"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@android:color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="89"
        android:orientation="vertical"
        android:weightSum="100">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="10"
            android:background="@color/menu_green"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:gravity="left"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="10dp"
            app:titleTextColor="@android:color/white">


            <LinearLayout
                android:id="@+id/back_feed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_filter_state"
                android:gravity="center">

                <ImageView
                    android:id="@+id/b_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_go_back_left_arrow_" />
            </LinearLayout>


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Details"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="35dp"
            android:layout_weight="15"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="What are you planning to purchase?"
                android:textColor="#000"
                android:textSize="15dp"

                />

            <EditText
                android:id="@+id/purchase_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:textSize="14dp"
                android:textColor="#666666"


                android:editable="false"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_down_arrow"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_marginHorizontal="15dp"
                android:background="#dcdcdc" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="10"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Are you looking for finance/loan ?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/finance_sw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:fontFamily="@font/segoeui"
                android:gravity="right"
                android:textAppearance="@style/SwitchTextAppearance"
                android:textOff="No"
                android:textOn="Yes"
                android:textColor="@color/white"

                android:thumb="@drawable/switch_custom_selector"
                app:showText="true"
                app:track="@drawable/switch_custom_track" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="25"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Contact Address"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_down_arrow"
                android:editable="false"
                android:textColor="#666666"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_marginHorizontal="15dp"
                android:background="#dcdcdc" />



            <TextView
                android:id="@+id/add_addrss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Add New Address"
                android:textColor="#279E5E"
                android:textSize="15dp"
                android:textStyle="bold"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="15"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/segoeui"
                android:text="Need Demonstration/Test drive ?"
                android:textColor="#000"
                android:textSize="15dp"

                />


            <android.support.v7.widget.SwitchCompat

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/segoeui"
                android:gravity="right"
                android:textOff="No"
                android:textOn="Yes"
                android:thumb="@drawable/switch_custom_selector"
                app:showText="true"
                android:textColor="@color/white"
                app:track="@drawable/switch_custom_track" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="11"
        android:background="@drawable/grey_background"
        android:gravity="center|bottom"
       >


        <TextView
            android:id="@+id/add_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/border_filled_red"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:text="Request a Price"
            android:layout_marginBottom="15dp"
            android:padding="11dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>
    </LinearLayout>
