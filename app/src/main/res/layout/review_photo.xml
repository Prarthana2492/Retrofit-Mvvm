<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="100"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/green"
        >


        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/ripple_effect"
            android:layout_marginLeft="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_go_back_left_arrow_"

                android:background="?attr/selectableItemBackgroundBorderless"

                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Photo"
            android:textSize="20dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:id="@+id/setting_tittle" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/review_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />


</LinearLayout>

            <TextView
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"
                />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place your face within the frame"
                    android:textColor="#000"
                    android:fontFamily="@font/segoeui"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_verified_green_sm"
                    android:drawablePadding="10dp"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ensure that the room has good lighting"
                    android:textColor="#000"
                    android:fontFamily="@font/segoeui"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_verified_green_sm"
                    android:drawablePadding="10dp"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo should be clear and sharp"
                    android:textColor="#000"
                    android:fontFamily="@font/segoeui"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_verified_green_sm"
                    android:drawablePadding="10dp"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't include objects in the background"
                    android:textColor="#000"
                    android:fontFamily="@font/segoeui"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_verified_green_sm"
                    android:drawablePadding="10dp"
                    android:textSize="14dp"
                    />


            <TextView
                android:id="@+id/take_photo_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take photo again"
                android:textColor="#090BCD"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"
                />

        </LinearLayout>
        </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/border_filled_red"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPLOAD THIS IMAGE"
            android:textSize="16dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/segoeui"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/upload_img" />

    </LinearLayout>

    </LinearLayout>

